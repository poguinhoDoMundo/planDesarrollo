@model List<pln_v2.Models.MisProyecto>

@{
    ViewBag.Title = "Revision";
    Layout = "~/Views/shared/_Layout.cshtml";
}

<h1 class="text-center">Revision proyectos</h1>
<br />


@if (Model.Count > 0)
{
<table class="table table-sm">
    <thead>
        <tr>
            <th scope="col">Factor</th>
            <th scope="col">Proyecto</th>
            <th scope="col">Estado</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (pln_v2.Models.MisProyecto proyecto in Model)
        {
            <tr>
                <td>
                    @proyecto.NOM_FACTOR
                </td>
                <td>
                    @proyecto.NOM_PROYECTO
                </td>
                <td>
                    @proyecto.ESTADO
                </td>
                <td>
                    <a href="@Url.Action("RevisionDetalle", new { id = proyecto.ID_PROYECTO })" class="btn btn btn-outline-primary btn-sm">
                        Ver mas ...
                    </a>
                </td>
            </tr>    

        }
    </tbody>
</table>
}
else 
{
    <h3> No existen proyectos pendientes por revisar. </h3>
}
